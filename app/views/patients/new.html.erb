<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4">Register Patient</h2>
      <%= form_with model: @patient, url: patients_path, method: :post do |f| %>
        <%= render 'form', f: f %>
        <%= f.submit 'Register Patient', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
