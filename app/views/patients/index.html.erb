<div class="container mt-5">
  <h2>Registered Patients</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Date of Birth</th>
        <!-- Add more columns if needed -->
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.name %></td>
          <td><%= patient.email %></td>
          <td><%= patient.dob %></td>
          <!-- Add more columns if needed -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
