<!-- app/views/receptionists/new.html.erb -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4">Register Receptionist</h2>
      <%= form_with model: @receptionist, url: receptionists_path, method: :post do |f| %>
        <%= render 'form', f: f %>
        <%= f.submit 'Register Receptionist', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
